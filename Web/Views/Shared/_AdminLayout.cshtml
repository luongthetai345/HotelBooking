<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <style>
        .navbar-brand {
            font-size: 24px;
            color: #f8f9fa; /* Màu chữ trắng */
            margin-right: auto; /* Đẩy liên kết Website sang trái */
        }

        /* Đảm bảo các mục menu ở bên phải */
        .navbar-nav {
            display: flex;
            justify-content: flex-end; /* Đảm bảo các mục menu căn ra bên phải */
        }

        .navbar-nav {
            display: flex;
            gap: 30px; /* Khoảng cách giữa các mục menu */
        }
        /* Đặt kiểu cho các card */
        .card {
            border-radius: 8px;
            transition: transform 0.2s ease-in-out;
        }

            .card:hover {
                transform: scale(1.05);
            }

        /* Đặt khoảng cách giữa các card */
        .row .col-md-4 {
            margin-bottom: 20px;
        }

        /* Đặt style cho các tiêu đề */
        h2 {
            color: #333;
            font-weight: bold;
        }

        .card-header {
            font-size: 1.2rem;
            font-weight: bold;
        }

        .card-body .card-title {
            font-size: 1.1rem;
        }

    </style>
    <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-dark">
        <div class="container">
            <a href="@Url.Action("Index", "Admin")" class="navbar-brand">ADMIN</a>
            <div class="collapse navbar-collapse d-sm-inline-flex justify-content-end">
                <ul class="navbar-nav ">
                    <li>@Html.ActionLink("Trang khách hàng", "Index", "Frontend", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Khách sạn", "DanhSachKS", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Phòng", "DanhSachPhong", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Khách hàng", "DanhSachKH", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Đơn đặt phòng", "DonDatPhong", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>@Html.ActionLink("Thống kê", "ThongKe", "Admin", new { area = "" }, new { @class = "nav-link" })</li>
                    <li>
                        @{
                            var adminId = Session["AdminId"];
                        }

                        <!-- Hiển thị nút Logout chỉ khi đã đăng nhập -->
                        @if (adminId != null)
                        {
                            <form action="@Url.Action("Logout", "Admin")" method="post" style="display:inline;">
                                <button type="submit" class="btn btn-primary">Đăng xuất</button>
                            </form>
                        }
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
