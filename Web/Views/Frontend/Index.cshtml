@model List<Web.Models.PHONG>
<div style="display:flex; justify-content:center; 
            background-image: url('/Content/Image/nen.jpg'); 
            background-size: cover; /* Làm cho ảnh nền bao phủ toàn bộ phần tử */
            background-position: center; /* Căn giữa ảnh nền */
            background-repeat: no-repeat; /* Không lặp lại ảnh nền */
            width: 100%; /* Chiều rộng phần tử chiếm 100% */
            height: 400px; /* Chiều cao phần tử */
            ">
    <div style="display:flex; flex-direction:column">
        <h1 style="text-align:center; margin-top: 100px; font-size: 100px">Amazing Hotel</h1><br />
    </div>
    

</div>

<div class="khachsan-container">
    @foreach (var phong in Model)
    {
        <div class="phongs-item">
            <p>
                <img src="@($"/Content/Image/{phong.hinhanh}")" class="phongs-img" />
            </p>
            <p class="phong-info">Tên phòng: @phong.sophong</p>
            <p class="phong-info">Giá: @String.Format("{0:N0}", phong.gia) đ/ngày</p>
            <p class="phong-info">Khách sạn: @phong.KHACHSAN.tenkhachsan</p>
            <p class="phong-info">Địa chỉ: @phong.KHACHSAN.diachi</p>
            <a href="@Url.Action("Details", "Frontend", new { id = phong.id_phong })" class="btn btn-primary" style="color:white">Xem chi tiết</a>
        </div>
    }
</div>
<div style="display:flex; justify-content:center">
    <a href="@Url.Action("HienThiPhong", "Frontend", new { })" class="btn btn-success" style="padding: 20px">Danh sách phòng -></a>
</div>
