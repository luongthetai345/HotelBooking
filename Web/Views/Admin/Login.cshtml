@{
    ViewBag.Title = "Login";
}
@{
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}@model Web.Models.loginadmin
<div style="margin: 100px; margin-left: 500px">
    <h2>Đăng Nhập Admin</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-group">
            Tài khoản:
            @Html.TextBoxFor(m => m.taikhoan, new { @class = "form-control", placeholder = "Tài khoản", id = "taikhoan" })
        </div>

        <div class="form-group">
            Mật khẩu:
            @Html.PasswordFor(m => m.matkhau, new { @class = "form-control", placeholder = "Mật khẩu", id = "matkhau" })
        </div>
        <br />
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Đăng Nhập</button>
        </div>

        if (ViewData.ModelState[""] != null)
        {
            <div class="alert alert-danger">
                @Html.ValidationSummary()
            </div>
        }
    }
</div>
